import java.util.Scanner;
public class Main
{
    public static void main(String[] args)
    {
        //get input
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int arr[]=new int[n];
        //getting elements of array
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
        }
        //printing output
        int sum=0;
        for(int i=0;i<n;i++){
            if(arr[i]%2==0){
                sum=sum+arr[i];
            }
        }
        System.out.println("The sum of the even numbers in the array is "+sum);
    }
}
